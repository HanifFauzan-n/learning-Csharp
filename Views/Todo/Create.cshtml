@model todo_list.Models.TodoItem

<h1>Buat Tugas Baru</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" class="p-4 border rounded bg-light">
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label mb-1" ></label>
                <input asp-for="Title" class="form-control-lg mb-1 col-md-6" placeholder="Apa yang perlu dikerjakan ?" type="text">
                <span asp-asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Kembali</a>
            </div>
        </form>
    </div>
</div>
