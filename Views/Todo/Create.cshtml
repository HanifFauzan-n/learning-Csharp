@model todo_list.Models.TodoItem

<h1>Buat Tugas Baru</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" class="p-4 border rounded ">
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label mb-1"></label>
                <input asp-for="Title" class="form-control-lg mb-1 col-md-6" placeholder="Apa yang perlu dikerjakan ?"
                    type="text">
                <span asp-asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col"></div>
                    <div class="form-group mb-3">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control">
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                <div class="col"></div>
                    <div class="form-group mb-3">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" class="form-control">
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                <div class="col"></div>
                    <div class="form-group">
                        <label asp-for="Priority" class="control-label"></label>
                        <select asp-for="Priority" class="form-select"
                            asp-items="Html.GetEnumSelectList<todo_list.Enums.PriorityLevels>()"></select>
                        <span asp-validation-for="Priority" class="text-danger"></span>
                    </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Kembali</a>
            </div>
        </form>
    </div>
</div>
</div>
