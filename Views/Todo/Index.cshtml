@model IEnumerable<todo_list.Models.TodoItem>
@using todo_list.Enums

@{
    ViewData["Title"] = "Daftar Tugas";
    var currentSort = ViewData["CurrentSort"] as string ?? "title";
    var currentFilter = ViewData["CurrentFilter"] as string;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-tasks me-2"></i> @ViewData["Title"]
                    </h4>
                    <a asp-action="Create" class="btn">
                        <i class="fas fa-plus me-1"></i> Buat Tugas Baru
                    </a>
                </div>
                <div class="card-body border-bottom py-2">
                    <div class="row">
                        <div class="col-md-6">
                            <form asp-action="Index" method="get">
                                <div class="input-group input-group-sm">
                                    <input type="text" name="searchString" class="form-control"
                                        placeholder="Cari tugas..." value="@currentFilter">
                                    <button class="btn btn-outline-secondary" type="submit">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-6">
                            <form asp-action="Index" method="get" class="d-flex justify-content-end">
                                <div class="d-flex align-items-center">
                                    <label class="me-2">Urutkan:</label>
                                    <select name="sortBy" class="form-select form-select-sm"
                                        onchange="this.form.submit()">
                                        <option value="title" selected="@(currentSort == "title")">Alphabet (A-Z)
                                        </option>
                                        <option value="date" selected="@(currentSort == "date")">Waktu (Asc)</option>
                                        <option value="priority" selected="@(currentSort == "priority")">Prioritas (Asc)
                                        </option>
                                        <option value="desc_title" selected="@(currentSort == "desc_title")">Alphabet
                                            (Z-A)
                                        </option>
                                        <option value="desc_date" selected="@(currentSort == "desc_date")">Waktu (Desc)
                                        </option>
                                        <option value="desc_priority" selected="@(currentSort == "desc_priority")">Prioritas (Desc)
                                        </option>
                                        
                                    </select>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var item in Model)
                        {
                            var colorClass = "";
                            switch (item.Priority)
                            {
                                case PriorityLevels.Rendah:
                                    colorClass = "bg-success";
                                    break;
                                case PriorityLevels.Sedang:
                                    colorClass = "bg-warning text-dark";
                                    break;
                                case PriorityLevels.Tinggi:
                                    colorClass = "bg-primary";
                                    break;
                                default:
                                    colorClass = "bg-warning text-dark";
                                    break;
                            }

                            <li class="list-group-item d-flex justify-content-between align-items-center">

                                <div class="d-flex align-items-center">
                                    <form asp-action="ToggleIsCompleted" method="post" class="me-3">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <input type="checkbox" class="form-check-input" checked="@item.IsCompleted"
                                            onchange="this.form.submit()" title="Tandai sebagai selesai/belum selesai" />
                                    </form>

                                    <div class="@(item.IsCompleted ? "text-muted" : "")">
                                        <span class="@(item.IsCompleted ? "text-decoration-line-through" : "")">
                                            @item.Title
                                        </span>
                                        <span class="badge rounded-pill @colorClass ms-2">@item.Priority</span>
                                        <br />
                                        <small>
                                            @item.StartDate.ToString("HH:mm") - @item.EndDate.ToString("HH:mm")
                                        </small>
                                    </div>
                                </div>

                                <div>
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                        class="btn btn-sm btn-outline-secondary me-1" title="Edit">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"
                                        title="Hapus">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>